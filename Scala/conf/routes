# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /card                       controllers.CardController.getAll
GET     /card/:itemId               controllers.CardController.getById(itemId: Long)
PUT     /card/done/:itemId          controllers.CardController.update(itemId: Long)
DELETE  /card/:itemId               controllers.CardController.delete(itemId: Long)
POST    /card                       controllers.CardController.add

GET     /product                       controllers.ProductController.getAll
GET     /product/:itemId               controllers.ProductController.getById(itemId: Long)
PUT     /product/done/:itemId          controllers.ProductController.update(itemId: Long)
DELETE  /product/:itemId               controllers.ProductController.delete(itemId: Long)
POST    /product                       controllers.ProductController.add

GET     /category                       controllers.CategoryController.getAll
GET     /category/:itemId               controllers.CategoryController.getById(itemId: Long)
PUT     /category/done/:itemId          controllers.CategoryController.update(itemId: Long)
DELETE  /category/:itemId               controllers.CategoryController.delete(itemId: Long)
POST    /category                       controllers.CategoryController.add